{% extends 'base.html.twig' %}

{% block title %}Contact Me!{% endblock %}

{% block body %}
    <h1>Contact Me!</h1>
    <div class="contact-form">
        <style>
            .contact-form {
                display: none;
                opacity: 0;
                transition: opacity 0.5s;
            }

            .contact-form form {
                /*max-width: var(--max-width-screen-md);*/
                display: flex;
                flex-direction: column;
                /*width: 100%;*/
            }
        </style>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Submit">
        {{ form_end(form) }}
    </div>
    <div class="game-container">
        <style>
            .game-container {
                opacity: 1;
                transition: opacity 0.5s;
            }

            .game-board {
                display: grid;
                grid-template-columns: repeat(3, 1fr); /* for 3x3 grid */
                gap: 10px;
                margin: 0 auto;
            }

            .card {
                width: 200px;
                height: 200px;
                perspective: 1000px;
            }

            .card-inner {
                width: 100%;
                height: 100%;
                transform-style: preserve-3d;
                transition: transform 0.5s;
            }

            .card:hover .card-inner {
                transform: rotateY(180deg); /* flip effect on hover for demo, use JS for real interaction */
            }

            .card-front, .card-back {
                position: absolute;
                width: 100%;
                height: 100%;
                backface-visibility: hidden;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 2em;
                border: 1px solid #000;
            }

            .card-front {
                background: #FFF;
            }

            .card-back {
                background: #EEE;
                transform: rotateY(180deg);
            }

            .card-special .card-back {
                background: #FFD700;
            }
        </style>
        <div class="game-board">
            {% for card in cards %}
                <div class="card {{ card.special }}" data-id="{{ card.content }}">
                    <div class="card-inner">
                        <div class="card-front"></div>
                        <div class="card-back">{{ card.content }}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
